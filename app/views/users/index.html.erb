<main>
  <p id="notice">Welcome! You have signed up successfully.</p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag 'no_image', size: "100x100" %><br>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th>ここにユーザー説明が入る</th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do  %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div><br>
        <h2>New Book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%=f.text_field :title %>
          </div>
          <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%=f.text_area :body %>
          </div>
          <%=f.submit 'Create Book',class:"btn btn-success" %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |books| %>
            <tr>
              <td><%= books.title %></td>
              <td><%= books.title %></td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
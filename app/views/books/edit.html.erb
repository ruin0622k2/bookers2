<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <h4><%= @book.errors.count %>件のエラーが発生しました</h4>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" ,class:"btn btn-success"%>
        </div>
          <%= link_to "Show", book_path(@book.id) %> |
          <%= link_to "Back", books_path %>
        <% end %>
      </div>
    </div>
  </div>
</main>